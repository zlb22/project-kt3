[Unit]
Description=KT3 FastAPI Backend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/home/ubuntu/zlb/project-kt3/backend
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/ubuntu/zlb/project-kt3/backend/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
